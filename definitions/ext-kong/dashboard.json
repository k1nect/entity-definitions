{
  "name": "Kong",
  "description": null,
  "pages": [
    {
      "name": "Kong Monitoring",
      "description": null,
      "widgets": [
        {
          "title": "Current Nginx HTTP Connections",
          "layout": {
            "column": 1,
            "row": 1,
            "width": 4,
            "height": 3
          },
          "linkedEntityGuids": null,
          "visualization": {
            "id": "viz.line"
          },
          "rawConfiguration": {
            "facet": {
              "showOtherSeries": false
            },
            "legend": {
              "enabled": true
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "SELECT latest(kong_nginx_http_current_connections) FROM Metric FACET instance TIMESERIES AUTO"
              }
            ],
            "platformOptions": {
              "ignoreTimeRange": false
            },
            "yAxisLeft": {
              "zero": true
            }
          }
        },
        {
          "title": "Nginx Errors Total",
          "layout": {
            "column": 5,
            "row": 1,
            "width": 4,
            "height": 3
          },
          "linkedEntityGuids": null,
          "visualization": {
            "id": "viz.line"
          },
          "rawConfiguration": {
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "SELECT sum(kong_nginx_metric_errors_total) FROM Metric FACET instance TIMESERIES AUTO"
              }
            ]
          }
        },
        {
          "title": "Datastore Status",
          "layout": {
            "column": 9,
            "row": 1,
            "width": 4,
            "height": 3
          },
          "linkedEntityGuids": null,
          "visualization": {
            "id": "viz.billboard"
          },
          "rawConfiguration": {
            "facet": {
              "showOtherSeries": false
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "SELECT latest(kong_datastore_reachable)  as 'Status' FROM Metric FACET instance"
              }
            ],
            "platformOptions": {
              "ignoreTimeRange": false
            },
            "thresholds": [
              {
                "alertSeverity": "WARNING",
                "value": 0.1
              },
              {
                "alertSeverity": "CRITICAL",
                "value": 0
              }
            ]
          }
        }
      ]
    }
  ]
}